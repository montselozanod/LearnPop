<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" tools:context="mindpop.learnpop.WebItem"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/namePartner"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnView"
        android:layout_alignStart="@+id/btnView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textStyle="bold" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#ff018adf"
        android:layout_weight="0.71">


        <TextView
            android:layout_width="239dp"
            android:layout_height="238dp"
            android:text="Summary"
            android:id="@+id/sumPartner"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/titleTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.27"
            android:textColor="#fff8fffd"
            android:textStyle="bold"
            android:textAlignment="center" />


    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textColor="@color/frame_solid"
        android:background="@color/red"
        android:id="@+id/btnViewPartner"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

</LinearLayout>

